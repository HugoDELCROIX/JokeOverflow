<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JokeOverflow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_night</item>
        <item name="colorOnPrimary">@color/secondary_night_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_night</item>
        <item name="colorSecondaryVariant">@color/secondary_night</item>
        <item name="colorOnSecondary">@color/secondary_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/actionBar</item>

        <item name="android:windowBackground">@color/primary_night</item>

    </style>

    <style name="actionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/yellow</item>
        <item name="android:textColor">@color/primary_night_text</item>
    </style>

    <style name="bottomNavigationBar" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primary_night</item>
        <item name="itemTextColor">@color/secondary_night_text</item>
        <item name="itemIconTint">@color/secondary_night_text</item>
    </style>

    <style name="button">
        <item name="backgroundTint">@color/secondary_night</item>
        <item name="android:textColor">@color/primary_night_text</item>
    </style>

    <style name="primary_text">
        <item name="android:textColor">@color/primary_night_text</item>
    </style>

    <style name="secondary_text">
        <item name="android:textColor">@color/secondary_night_text</item>
    </style>

    <style name="input">
        <item name="android:backgroundTint">@color/primary_night_text</item>
    </style>

    <style name="card">
        <item name="android:background">@color/secondary_night</item>
    </style>

    <style name="main_button">
        <item name="backgroundTint">@color/secondary_night_text</item>
    </style>
</resources>