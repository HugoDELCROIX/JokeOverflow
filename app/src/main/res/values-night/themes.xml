<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JokeOverflow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_black</item>
        <item name="colorPrimaryVariant">@color/primary_black</item>
        <item name="colorOnPrimary">@color/primary_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/actionBar</item>

        <item name="android:windowBackground">@color/primary_black</item>

    </style>

    <style name="actionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/secondary_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottomNavigationBar" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primary_black</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

</resources>